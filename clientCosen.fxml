<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ClientCosen">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFD700;">
            <children>
                <MenuBar prefHeight="32.0" prefWidth="600.0">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Close" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <AnchorPane layoutY="32.0" prefHeight="113.0" prefWidth="600.0" style="-fx-background-color: #FF4500;">
                    <children>
                        <Label layoutX="217.0" layoutY="24.0" text="AutoBoss">
                            <font>
                                <Font name="Vladimir Script" size="48.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
                <ComboBox fx:id="servType" layoutX="196.0" layoutY="156.0" onAction="#typeChoise" prefHeight="31.0" prefWidth="211.0" promptText="Выберите вид услуги" />
                <ComboBox fx:id="serv" layoutX="196.0" layoutY="200.0" onAction="#servChoise" prefHeight="31.0" prefWidth="211.0" promptText="Выберите услугу" visible="false" />
                <ComboBox fx:id="timeChoise" layoutX="195.0" layoutY="242.0" onAction="#timeChoise" prefHeight="31.0" prefWidth="211.0" promptText="Выберите время" visible="false" />
                <Button fx:id="signButton" layoutX="212.0" layoutY="327.0" mnemonicParsing="false" onAction="#sign" prefHeight="50.0" prefWidth="180.0" text="Записаться" visible="false" />
                <Label fx:id="priseLabel" layoutX="283.0" layoutY="290.0" />
            </children>
        </Pane>
    </children>
